@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="registration-container">
    <h1 class="text-center fs-2">Регистрация</h1>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                   placeholder="name@example.com"/>
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true"
                   placeholder="password"/>
            <label asp-for="Input.Password">Пароль</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password"
                   aria-required="true" placeholder="password"/>
            <label asp-for="Input.ConfirmPassword">Подтвердите пароль</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.RegionId" class="form-label">Регион</label>
            <select asp-for="Input.RegionId" class="form-select" required>
                <option value="" disabled selected>Выберите регион</option>
                @foreach (var region in Model.Regions ?? [])
                {
                    <option value="@region.Id">@region.Name</option>
                }
            </select>
            <span asp-validation-for="Input.RegionId" class="text-danger"></span>
        </div>
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="responsibilityCheckbox">
            <label class="form-check-label" for="responsibilityCheckbox">Отвечаю за весь регион</label>
        </div>

        <div class="mb-3" id="city-container">
            <label asp-for="Input.CityId" class="form-label">Город</label>
            <select asp-for="Input.CityId" class="form-select" required>
                <option value="" disabled selected>Выберите город</option>

            </select>
            <span asp-validation-for="Input.CityId" class="text-danger"></span>
        </div>
        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Зарегистрироваться</button>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>

    <script>
    // Скрипт для управления видимостью выпадающего списка с городами
    const checkbox = document.getElementById('responsibilityCheckbox');
    const cityContainer = document.getElementById('city-container');
    const citySelect = document.getElementById('Input_CityId');
    const regionSelect = document.getElementById('Input_RegionId');

    checkbox.addEventListener('change', function() {
        if (this.checked) {
            cityContainer.style.display = 'none';
            citySelect.removeAttribute('required');
        } else {
            cityContainer.style.display = 'block';
            citySelect.setAttribute('required', 'required');
        }
    });

    // Скрипт для загрузки городов при выборе региона
    regionSelect.addEventListener('change', function() {
        const regionId = this.value;
        fetch(`/Identity/Account/Register?handler=Cities&regionId=${regionId}`)
            .then(response => response.json())
            .then(data => {
                citySelect.innerHTML = '<option value="" disabled selected>Выберите город</option>';
                data.forEach(city => {
                    const option = document.createElement('option');
                    option.value = city.id;
                    option.textContent = city.name;
                    citySelect.appendChild(option);
                });
            })
            .catch(error => console.error('Ошибка загрузки городов:', error));
    });
</script>
}