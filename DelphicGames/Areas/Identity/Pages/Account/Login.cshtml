@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<div class="login-container">
    <h1 class="text-center fs-2">@ViewData["Title"]</h1>
    <form id="account" method="post">
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                   placeholder="name@example.com"/>
            <label asp-for="Input.Email" class="form-label">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                   aria-required="true" placeholder="password"/>
            <label asp-for="Input.Password" class="form-label">Пароль</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Войти</button>
        <div class="mt-3">
            <p>
                <span>Нет аккаунта? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Зарегистрируйтесь</a></span>
            </p>
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Повторно отправить подтверждение по электронной почте</a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}