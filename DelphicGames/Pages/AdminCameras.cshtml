@page
@model DelphicGames.Pages.AdminCamerasModel

@{
    ViewData["Title"] = "Камеры";
}

@{
    ViewData["Title"] = "Управление камерами";
}

<div class="container my-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h5 class="card-title">Камеры</h5>

            <div class="table-responsive">
                <table class="table table-striped" id="cameraTable">
                    <thead>
                        <tr>
                            <th>Город</th>
                            <th>Название камеры</th>
                            <th>URL-адрес</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Cameras will be dynamically populated here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal for adding/editing tokens -->
<div class="modal fade" id="editTokensModal" tabindex="-1" aria-labelledby="editTokensModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="editTokensModalLabel">Редактирование токенов платформ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="platformTokensForm">
                    <input type="hidden" id="cameraId" />
                    <div id="platformTokensContainer">
                        <!-- Platform tokens input fields will be dynamically added here -->
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-success" id="saveTokensButton">Сохранить</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="js/adminCameras.js" asp-append-version="true"></script>
}