@page
@model DelphicGames.Pages.Root.Users.IndexModel

@{
    ViewData["Title"] = "Управление пользователями";
}

<div class="container mt-4">
    <h1 class="mb-4">Пользователи</h1>

    <a asp-page="Create" class="btn btn-primary mb-3">Создать нового пользователя</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Email</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-secondary">Изменить пароль</a>
                        |
                        <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>