@page "/cameras"
@model DelphicGames.Pages.CamerasModel

@{
    ViewData["Title"] = "Камеры";
}

<div class="container my-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title">Камеры</h5>
                <button type="button" class="btn btn-success me-2" data-bs-toggle="modal" data-bs-target="#addCameraModal">Добавить камеру</button>
            </div>

            <!-- Фильтры -->
            <div class="border p-3 mb-3 rounded">
                <h6 class="text-secondary">Фильтры</h6>
                <div class="row g-2">
                    <div class="col-md">
                        <input type="text" class="form-control" placeholder="Город/Регион">
                    </div>
                    <div class="col-md">
                        <input type="text" class="form-control" placeholder="Название камеры">
                    </div>
                    <div class="col-md">
                        <input type="text" class="form-control" placeholder="URL-адрес">
                    </div>
                </div>
            </div>

            <!-- Таблица с камерами -->
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Город/Регион</th>
                        <th>Название камеры</th>
                        <th>URL-адрес</th>
                        <th>Токен VK</th>
                        <th>Токен OK</th>
                        <th>Токен Rutube</th>
                        <th>Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>Город</td>
                        <td>Пример камеры</td>
                        <td>https://example.com</td>
                        <td>vk_token</td>
                        <td>ok_token</td>
                        <td>rutube_token</td>
                        <td>
                            <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editCameraModal">Изменить</button>
                            <button type="button" class="btn btn-danger btn-sm">Удалить</button>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно для добавления камеры -->
<div class="modal fade" id="addCameraModal" tabindex="-1" aria-labelledby="addCameraModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="addCameraModalLabel">Добавление камеры</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addCameraForm">
                    <div class="mb-3">
                        <label class="form-label text-secondary">Название города/региона</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-secondary">Название камеры</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-secondary">URL-адрес</label>
                        <input type="url" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-secondary">Токен VK</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-secondary">Токен OK</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-secondary">Токен Rutube</label>
                        <input type="text" class="form-control">
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-success me-2">Добавить</button>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно для изменения камеры -->
<div class="modal fade" id="editCameraModal" tabindex="-1" aria-labelledby="editCameraModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="editCameraModalLabel">Изменить камеру</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editCameraForm">
                    <div class="mb-3">
                        <label class="form-label text-secondary">Название города/региона</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-secondary">Название камеры</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-secondary">URL-адрес</label>
                        <input type="url" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-secondary">Токен VK</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-secondary">Токен OK</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-secondary">Токен Rutube</label>
                        <input type="text" class="form-control">
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-success me-2">Сохранить изменения</button>
            </div>
        </div>
    </div>
</div>