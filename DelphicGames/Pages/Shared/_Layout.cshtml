@using Microsoft.AspNetCore.Mvc.ViewEngines
@inject ICompositeViewEngine Engine
<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    @await RenderSectionAsync("Head", required: false)
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-brand" style="color: #000; float: left; display: inline-block; width: 350px;">
                    <img src="/img/logo.png" class="d-inline-block align-text-middle"
                        style="width: 25%; display: inline-block;" alt="Логотип СГУ" />
                    СГУ им. Питирима Сорокина
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @{
                        var result = Engine.FindView(ViewContext, "_LoginPartial", isMainPage: false);
                    }
                    @if (result.Success)
                    {
                        await Html.RenderPartialAsync("_LoginPartial");
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="main-wrapper">
        <main role="main" class="pb-1">
            @RenderBody()
        </main>
    </div>
    <footer class="text-center text-lg-start" style="background: url('/img/fragments.png') no-repeat right;">
        <br />
        <br />
        <br />
        <div class="container p-4">
            <div class="row mt-4">
                <div class="col-lg-2 col-md-6 mb-4 mb-md-0" style="float: left;">
                    <div style="float: left;">
                        <a href="https://delphic.games/" target="_blank"><img src="/img/games_logo.png"
                                style="width: 100%;" /></a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                    <div>
                        <h2 style="color: #8827b1;">25 лет Дельфийским играм!</h2>
                    </div>
                    <hr />
                    <p>
                        Портал разработан кафедрой Прикладной информатики Института точных наук и информационных
                        технологий ФГБОУ ВО "СГУ имени Питирима Сорокина"
                    </p>
                </div>
                <div class="col-lg-6 mb-4 mb-md-0">
                    <p></p>
                </div>
            </div>
        </div>
        <br />
        <br />
        <br />
    </footer>
    <footer class="text-center text-white text-lg-start" style="background-color: #1e0a27">
        <div class="container p-4">
            <div class="row mt-4">
                <p>© 2024 СГУ им. Питирима Сорокина. Все права защищены.</p>
            </div>
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>